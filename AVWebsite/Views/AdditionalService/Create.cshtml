@model AVWebsite.Models.ViewModels.AdditionalServiceVM

@{
    ViewData["Title"] = "Create Additinal Service";
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        $("#endDate").kendoDateTimePicker({
            value: new Date(),
            format: "dd MMM yy",
            dateInput: false
        });
    });
</script>

<h2>Create New Additional Service"</h2>

<br />
<div class="dan"></div>
<div class="card card-flush pt-3 mb-5 mb-xl-10">
    <div class="container">


        <form enctype="multipart/form-data" asp-controller="AdditionalService" method="post" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4 form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input asp-for="EndDate" class="form-control" id="endDate" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input type="number" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-10 form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">

                <label class="col-sm-2 col-form-label">Feature Image</label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="FeatureImage" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>


    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {


    <script>$(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });</script>
    <script>$(document).ready(function () {
            $('textarea').richText();
        });</script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
